{% extends 'base.html.twig' %}

{% block title %}Malleus - Dooz Escape Game{% endblock %}
{% block title_og %}Malleus{% endblock %}

{% block body %}

    <!--Carousel du Malleus -->
    <div id="carouselMalleus" class="carousel slide carousel-fade carousel_dooz" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselMalleus" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselMalleus" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselMalleus" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselMalleus" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>

        <h1 class="font_malleus">MALLEUS MALEFICARUM</h1>

        <div class="carousel-inner">
            <div class="filter_carousel">
                <div class="filter_carousel_1"></div>
                <div class="filter_carousel_2"></div>
            </div>
            <div class="carousel-item active">
                <img src="{{ asset('img/malleus/carousel/malleus1.jpeg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/malleus/carousel/malleus2.jpeg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/malleus/carousel/malleus3.jpeg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/malleus/carousel/malleus4.jpeg') }}" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselMalleus" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselMalleus" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--Ronces ICI-->

    <div id="content_malleus" style="background-image: url('{{ asset('img/malleus/design/fond.png') }}')">

        <!--Description Bars-->
        <div class="container-lg bars_description_content d-flex justify-content-center py-5">
            {% include 'bars/malleus_description.html.twig' %}
        </div>


        <!--Nos ActivitÃ©s-->
        {% include 'options/activities.html.twig' %}


        <!--Nos partenaires-->
        {% include 'options/partners.html.twig' %}
    </div>

{% endblock %}
