{% extends 'base.html.twig' %}

{% block title %}Vanaheim - Dooz Escape Game{% endblock %}
{% block title_og %}Vanaheim{% endblock %}

{% block body %}

    <!--Carousel du Vanaheim -->
    <div id="carouselVanaheim" class="carousel slide carousel-fade carousel_dooz" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselVanaheim" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselVanaheim" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselVanaheim" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselVanaheim" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselVanaheim" data-bs-slide-to="4" aria-label="Slide 5"></button>
        </div>

        <h1>VANAHEIM</h1>

        <div class="carousel-inner">
            <div class="filter_carousel">
                <div class="filter_carousel_1"></div>
                <div class="filter_carousel_2"></div>
            </div>
            <div class="carousel-item active">
                <img src="{{ asset('img/vanaheim/carousel/vanaheim1.png') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/vanaheim/carousel/vanaheim2.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/vanaheim/carousel/vanaheim3.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/vanaheim/carousel/vanaheim4.jpg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/vanaheim/carousel/vanaheim5.jpg') }}" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselVanaheim" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselVanaheim" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--Ronces ICI-->

    <div id="content_vanaheim">

        {% if isAxePage is defined %}
            <!--Description Bars-->
            <div class="d-flex flex-column justify-content-center align-items-center py-5">
                {% include 'bars/vanaheim_axe_description.html.twig' %}
            </div>
        {% else %}
            <!--Description Bars-->
            <div class="d-flex flex-column justify-content-center align-items-center py-5">
                {% include 'bars/vanaheim_description.html.twig' %}
            </div>
        {% endif %}




        <!--Nos ActivitÃ©s-->
        {% include 'options/activities.html.twig' %}


        <!--Nos partenaires-->
        {% include 'options/partners.html.twig' %}
    </div>

{% endblock %}
