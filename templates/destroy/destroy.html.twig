{% extends 'base.html.twig' %}

{% block title %}Destroy Room - Dooz Escape Game{% endblock %}
{% block title_og %}Destroy Room{% endblock %}
{% block description %}Détruisez-tout pour vous détendre avec une activité unique à Strasbourg{% endblock %}
{% block description_og %}Détruisez-tout pour vous détendre avec une activité unique à Strasbourg{% endblock %}

{% block body %}

    <!--Carousel destroy-->
    <div id="carouselDestroy" class="carousel slide carousel-fade carousel_dooz" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselDestroy" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselDestroy" data-bs-slide-to="1" aria-label="Slide 2"></button>
        </div>
        <div class="carousel-inner">
            <h1 class="p-4">DESTROY ROOM</h1>
            <div class="filter_carousel">
                <div class="filter_carousel_1"></div>
                <div class="filter_carousel_2"></div>
            </div>
            <div class="carousel-item active">
                <img src="{{ asset('upload/destroy/carousel/destroy1.jpeg') }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('upload/destroy/carousel/destroy2.jpeg') }}" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselDestroy" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselDestroy" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div id="content_destroy"
         style="background: 3% repeat-y url({{ asset('img/destroy/design/bandes.png') }}), 97% repeat-y url({{ asset('img/destroy/design/bandes.png') }}), center top  url({{ asset('img/destroy/design/fond.jpg') }});">

        <!--Description Destroy-->
        {% include 'destroy/destroy_description.html.twig' %}


        <!--Nos Activités-->
        {% include 'options/activities.html.twig' %}


        <!--Nos partenaires-->
        {% include 'options/partners.html.twig' %}
    </div>

{% endblock %}
